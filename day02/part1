#! /bin/zsh

. ${0:P:h:h}/utils

is_safe() {
  print -rl -- $=@ |
    awk '
      NR == 1 { last = $1 }
      NR > 1 {
        diff=$1 - last
        if (!diff) {
          exiting=1; exit
        }
        sign = diff > 0 ? 1 : diff < 0 ? -1 : 0
        if ((streak && streak != sign) || diff < -3 || diff > 3) {
          exiting=1; exit
        }
        streak = sign
        last = $1
      }
      END { if (!exiting) { print "y" } }
    '
}

zargs -P$(nproc) -n1 -- "${(f)$(cat $1)}" -- is_safe | grep -c y
